
.tabsBox{
    display: flex;
    text-align: center;
}
.tabsItem{
    color: #CDCDCD;
    border-bottom: 4rpx solid #CDCDCD;
    flex: 1;
    padding: 20rpx 0;

}
.pageContainer {
    /* padding-left: 30rpx; */

}

.cell {
    color: #999999;
    display: flex;
    font-size: 30rpx;
    border-bottom: 1px solid #e9e9e9;
    line-height: 88rpx;
    padding-left: 40rpx;
    align-items: center;
}

.basicInfo .cell:nth-last-child(1) {
    border-bottom: none
}

.headerTitle {
    margin-left: 30rpx;
    height: 120rpx;
    line-height: 110rpx;
    font-size: 32rpx;
    color: #121212;
    font-weight: 600;
}

.basicInfo {
    box-shadow: 0 0 15px #e9e9e9;
}


.cell .cell_title {
    flex: 2;
    /* margin-right: 40rpx; */
    color: #000000;
}

.cell .textBox {
    flex: 3;

}
.inpView{
    display: flex;
    justify-content: space-between;
    align-items: center;
   
}
 .codeView {
     color: #0BB9BF;
     border-left: 2rpx solid #F6F6F6;
     padding: 0 40rpx;
 }
.van-hairline--top-bottom:after {
   border-width: 0 !important;
}
.van-tab--active{
 color:#FEC81E !important;
}
.selected{
    border-bottom: 4rpx solid #FEC81E;
    color: #FEC81E;
}
.saveBtn {
    width: 456rpx;
    height: 84rpx;
    font-size: 32rpx;
    font-weight: 550;
    color: #121212;
    line-height: 84rpx;
    background: rgba(254, 200, 30, 1);
    border-radius: 42rpx;
    text-align: center;
    margin: 40rpx auto 20rpx;
}