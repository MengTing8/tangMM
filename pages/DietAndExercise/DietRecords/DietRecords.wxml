<view class="DietRecordsContent">
    <view class="DietRecordsHeader">
        <view class="DietRecordsHeader_title">妊娠期每日能量摄入推荐</view>
        <view class="tableList">
            <view class="tableTitle tableFont">
                <view>建议</view>
                <view>实际</view>
            </view>
            <view class="table">
                <view class="tr tableFont">
                    <view class="th">热量</view>
                    <view class="th">蛋白质</view>
                     <view class="th">碳水化合物</view>
                    <view class="th">脂肪</view>
                </view>
                <block>
                    <view class="tr bg-g">
                        <view class="td">{{rniList.heat.suggestion}}</view>
                        <view class="td">{{rniList.protein.suggestion}}</view>
                        <view class="td">{{rniList.carbo.suggestion}}</view>
                        <view class="td">{{rniList.fat.suggestion}}</view>
                    </view>
                    <view class="tr">
                        <view class="td">{{rniList.heat.actual}}</view>
                        <view class="td">{{rniList.protein.actual}}</view>
                        <view class="td">{{rniList.carbo.actual}}</view>
                        <view class="td">{{rniList.fat.actual}}</view>
                    </view>
                </block>
            </view>
        </view>
    </view>
    <view class="DietRecordsListBox">
        <TimeRecord pickerObj="{{dateObj}}" bindbindDateChange='bindDateChange'></TimeRecord>
        <!-- 饮食录入列表 -->
        <view class="enteringList">
            <view class="enteringListView" wx:for="{{enteringItems}}" wx:key='index'>
                <!-- 餐时 -->
                <view class="inputList">
                    <view class="info_content">
                        <view class="expense_info_name">
                            <view class="food_content">
                                <view class="food_name">{{item.periodValue}}</view>
                                <view class="food_weight" bind:tap="tapFoodAdd" data-index="{{index}}">
                                    <view class="food_weight_content">
                                        <input class="weui-input" type="digit" value="{{item.value}}" bindinput="" placeholder="请输入" placeholder-class="placeholder_class" />
                                        <text>kcal</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="pickerContent">
                            <view class="pickerBox">
                                <picker mode="time" value="{{item.time}}" start="09:01" end="21:01" bindchange="bindTimeChange" data-index="{{index}}" data-periodCode="{{item.periodCode}}">
                                    <view class="picker">{{item.time || '用餐时间'}}</view>
                                </picker>
                            </view>
                            <view class="itemBox_rightArrow"></view>
                        </view>
                        <view class="pickerContent">
                            <view class="pickerBox">
                                <picker mode="selector"value="" range="{{categoryValues}}" range-key="{{'value'}}" bindchange="bindCategoryChange" data-index="{{index}}" data-periodCode="{{item.periodCode}}" data-categoryCode="{{item.categoryCode}}">
                                    <view class="picker">{{item.categoryValue || '请选择'}}</view>
                                </picker>
                            </view>
                            <view class="itemBox_rightArrow"></view>
                        </view>
                    </view>
                </view>
                <!-- 食物标签与上传 -->
                <view class="classifyBox">
                    <!-- 食物标签 -->
                    <view class="foodTagBox">
                        <view class="foodTagList">
                            <view class="foodTagItem" wx:for="{{item.food}}" wx:key='index' wx:for-item="F" wx:for-index="cd">
                                <view>{{F.name}}</view>
                                <view>{{F.value}}g</view>
                                <view bind:tap="DelFoodTag"  data-index='{{index}}' data-rowMd5="{{F.rowMd5}}" data-ins="{{cd}}" data-id='{{F.id}}'>
                                    <image class="DelFoodTag" src="../../../img/delS.png" />
                                </view>
                            </view>
                        </view>
                    </view>
                    <!-- 上传图片 -->
                    <view class="uploaderListContent">
                        <view class="uploaderImgBox"  data-index="{{index}}" bind:tap="UploadCourseware">
                            <van-icon name="photograph" color="#CDCDCD" size="48rpx" />
                            <view class="unifyFont">上传照片</view>
                        </view>
                        <view class="PhotoShwoContent" wx:for="{{item.photo}}" wx:for-item="P" wx:for-index="D" wx:key="D">
                            <image class="uploaderPhoto" src="{{P.url}}" mode="widthFix" />
                            <view class="delPhoto" bind:tap="delPhoto" data-index='{{index}}' data-fileName="{{P.fileName}}" data-ins="{{D}}">
                                <van-icon name="close" size="40rpx" color="#FFF" />
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <BtnComponents bindonSaveBtn="onSaveBtn" bindhistoryRecordBtn="historyRecordBtn"></BtnComponents>
</view>