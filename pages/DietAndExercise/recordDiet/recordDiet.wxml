<view class="vanSearchBox" bind:tap="">
    <van-search value="{{SearchValue}}" placeholder="搜索关键字" shape="round" field-class="fieldClass" bind:change="bindSearch" />
</view>
<view class="recordDietContent" wx:if="{{ShowTab}}">
    <van-tabs active="{{ active }}" color='#FEE55F'>
        <van-tab title="{{item.groupValue}}" wx:for="{{TabList}}" wx:key="index">
            <view class="expense_content">
                <view class="expense_info">
                    <view class="info_content">
                        <view class="expense_info_name" wx:for="{{item.foodValues}}" wx:for-item="f" wx:for-index="d" wx:key="d">
                            <view class="food_content">
                                <view class="food_name">{{f.name}}</view>
                                <view class="food_weight">
                                    <view class="food_weight_content">
                                        <input class="weui-input" type="digit" value="{{}}" data-index="{{d}}" data-code="{{f.code}}" data-name="{{f.name}}" bindinput="bindFoodValueInput" placeholder="请输入" placeholder-class="placeholder_class" />
                                        <text>g</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="arrive_btn" wx:if="{{item.foodValues.length>0}}">
                <view class="saveBtn" bind:tap="saveFood">保存</view>
            </view>
        </van-tab>
    </van-tabs>
</view>
<!-- 搜索模块 -->
<view class="content" wx:if="{{!ShowTab}}">
    <!-- <view class="vanSearchBox">
        <van-search value="{{SearchVal}}" placeholder="搜索关键字" shape="round" field-class="fieldClass" bind:change="onSearchChange" bind:search="onSearch" />
    </view> -->
    <view class="footContent">
        <view class="footList" wx:for="{{SearchFoodList}}" wx:for-item="C" wx:key="c">
            <view class="classNameFoot unifyFont">{{C.foodType}}</view>
            <view class="footItem" wx:for="{{C.nafoodChildrenme}}" wx:key="index">
                <view class="footName">{{item.name}}</view>
                <view class="rightArrow"></view>
            </view>
        </view>
    </view>
</view>