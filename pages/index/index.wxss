/**index.wxss**/
ec-canvas {
    width: 100%;
    height: 100%;
}

/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.weui-cell__hd {
    /* letter-spacing:5rpx; */
    font-size: 0.95rem;
}

.weui-cell {
    font-size: 14px;
    padding: 0 10px 20px 10px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.weui-cell__ft {
    font-size: 0.95rem;
    text-align: right;
}

.weui-input_10 {
    /* letter-spacing:10rpx; */
    font-size: 1.4rem;
    width: 8rem;
    background-color: #f9f9f9;
    text-align: center;
    border-bottom: 1rpx solid #000000;
    height: 1.5rem;
    min-height: 1.5rem;
    line-height: 1.4rem;
}

/* 弹窗蒙版 start */
.alert-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.Atitle {
    text-align: center;
    margin: 70rpx 0 20rpx 0;
    font-size: 34rpx;
    color: #121212;
    font-weight: 600;
}

.authInfo {
    color: #999999;
    font-size: 24rpx;
}

.authLogoBox {
    z-index: 1999;
    position: relative;
    position: absolute;
    top: -15%;
    left: 38%;
}

.authContent {
    z-index: 99999;
    position: fixed;
    top: 32%;
    left: 13.5%;
    /* left: 9.5%; */
    background: #F2F2F2;
    border-radius: 30rpx;
    padding: 40rpx;
}

.authLogo {
    width: 140rpx;
    height: 140rpx;
}

.BtnConten {
    display: flex;
    align-items: center;
    margin-top: 50rpx;
}
.unhide {
    line-height: 80rpx;
    text-align: center;
    border-radius: 21px;
    margin: 0 10rpx;
    width: 110px;
    height: 42px;
    color: #999999;
    border: 2rpx solid #CDCDCD;
    font-size: 28rpx;

}

.ToAuth {
    color: #121212;
    text-align: center;
    margin: 0 10rpx;
    line-height: 80rpx;

}

.ToAuth_button {
    text-align: center;
    width: 115px !important;
    height: 42px;
    border-radius: 21px;
    background: #FEC81E;
    font-weight: normal;
    font-size: 28rpx;
    line-height: 48rpx;

}