
mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.Atitle {
    text-align: center;
    margin: 70rpx 0 20rpx 0;
    font-size: 34rpx;
    color: #121212;
    font-weight: 600;
}

.authInfo {
    color: #999999;
    font-size: 24rpx;
}

.authLogoBox {
    z-index: 1999;
    position: relative;
    position: absolute;
    top: -15%;
    left: 38%;
}

.authContent {
    z-index: 99999;
    position: fixed;
    top: 32%;
    left: 13.5%;
    /* left: 9.5%; */
    background: #F2F2F2;
    border-radius: 30rpx;
    padding: 40rpx;
}

.authLogo {
    width: 140rpx;
    height: 140rpx;
}

.BtnConten {
    display: flex;
    align-items: center;
    margin-top: 50rpx;
}
.unhide {
    line-height: 80rpx;
    text-align: center;
    border-radius: 21px;
    margin: 0 10rpx;
    width: 110px;
    height: 42px;
    color: #999999;
    border: 2rpx solid #CDCDCD;
    font-size: 28rpx;

}

.ToAuth {
    color: #121212;
    text-align: center;
    margin: 0 10rpx;
    line-height: 80rpx;

}

.ToAuth_button {
    text-align: center;
    width: 115px !important;
    height: 42px;
    border-radius: 21px;
    background: #FEC81E;
    font-weight: normal;
    font-size: 28rpx;
    line-height: 48rpx;

}
.bg{
    width: 100%;
    margin-bottom: 50rpx;
}
.warnImg{
    width: 30rpx;
    vertical-align: middle;
}
.authBtn {
    width: 60% !important;
    /* width: 608rpx; */
    background: #fec81e;
    border-radius: 42rpx;
}

.warningCenter{
padding: 40rpx 80rpx;
font-size: 13px;
font-weight: 400;
color: #999999;
line-height: 38rpx;
letter-spacing: 0px;
text-align: left;
}