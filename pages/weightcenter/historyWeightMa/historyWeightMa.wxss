.mychartContent{
    height: 1000rpx;
    margin-top: 50rpx;
    position: relative;
    margin-bottom: 50rpx;
}

.scrollContainer {
    width: 100%;
     height: 1000rpx;
    white-space: nowrap;
    z-index: 99999;
}
.itemBg {
    display: inline-block;
}

.titleContentBox {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.legendBox {
    display: flex;
    align-items: center;
    padding: 12rpx 30rpx;
    font-size: 24rpx;
}

.legendIcon {
    margin-right: 14rpx;
}

.titleContent {
    position: absolute;
    right: 0;
    bottom: -5%;
    left: 0;
    display: flex;
    justify-content: center;
}