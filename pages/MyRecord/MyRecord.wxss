.MyRecordContent {}

.MyRecordHeader {
    background: #FEE55F;
    padding: 0 20rpx 0 50rpx;
    position: relative;
}

.userInfoBox {
    display: flex;
    padding-bottom: 60rpx;
    justify-content: space-between;
}

.MyRecordHeader_ImgBox {
    /* display: flex; */
}

.MyRecordHeader .userInfo {

    font-size: 24rpx;
    color: #9B884F;
    line-height: 48rpx;
}

.userName {
    color: #121212;
    font-size: 38rpx;
    font-weight: 550;
}

.editInfo {
    background: #FE9800;
    border-radius: 15px;
    color: #fff;
    padding: 8rpx 18rpx;
    margin-left: 20rpx;
}

.MyRecordHeader .userInfo .imageUser {
    width: 100rpx;
    height: 100rpx;
    margin-top: 40rpx;
    /* padding-top: 40rpx; */
    border-radius: 50%;
    overflow: hidden;

}

.banner {
    width: 300rpx;
}
.MessageContent{
 position: absolute;
 top: 0;
 right: 2%;
 /* display: flex; */
}
.message {
    width: 100rpx;
    height: 100rpx;
}
.newMessage{
    width: 16rpx;
    height:16rpx;
    background:#FE9800;
    border-radius: 50%;
     position: absolute;
     top: 24%;
     right: 24%;
}
.MyRecordDateInfo {
    width: 100%;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 2px 4px 0px rgba(238, 238, 238, 0.77);
    border-radius: 28px 28px 0px 0px;
    position: absolute;
    bottom: -16%;
    left: 0;
}

.MyRecordDateInfo_content {
    padding: 38rpx 50rpx;
    display: flex;
    justify-content: space-between;
    color: #999999;

}

.day {
    font-size: 36rpx;
    font-weight: 550;
}

.MyRecordFoot {
    padding-top: 100rpx;
    z-index: 999;
}

.none {
    margin-top: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 30rpx;
    color: #CDCDCD;
}

.none image {
    width: 188rpx;
    height: 210rpx;
    margin-bottom: 24rpx;
}

.none .btn {
    width: 456rpx;
    height: 84rpx;
    line-height: 58rpx;
    border-radius: 42rpx; 
    color: #121212;
    margin-top: 60rpx;
    font-size: 30rpx;
    background-color: #FEC81E; 
}