.report-panel {
    padding-bottom: 180rpx;
}
.userinfo-center {
background: #FEE55F;
opacity: 1;
font-size: 14px;
font-weight: 500;
color: #9b884f;
line-height: 20px;
letter-spacing: 0px;
/* padding:40rpx 40rpx; */
}
.userinfo-top {
    display: flex;
    align-items: center;
     padding: 30rpx 30rpx 15rpx;
    line-height: 48rpx;
}
.userName {
    font-size:38rpx;
    font-weight: 500;
    color: #121212;
}
.imageUser {
    width: 100rpx;
    height: 100rpx;
    margin-right: 40rpx;
    border-radius: 50%;
    overflow: hidden;
}
.userinfo-row{
   display: flex;
   justify-content: space-between;
   border-bottom: 2rpx solid #e6ce4e;
   line-height: 90rpx;
   padding: 0 100rpx 0 30rpx;
}
.table-panel{
    min-height: 1000rpx;
}
.scrollContainer {
    position: absolute;
    white-space: nowrap;
}

.itemBg {
    display: inline-block;
}
.coverView {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    text-align: center;
}

 image {
     width: 200rpx;
     height: 100rpx;
     margin-bottom: 10px;
 }
 .tableList {
     display: flex;
     color: #999999;
     font-size: 24rpx;
     padding: 18rpx 0;

 }

 .table {
     flex: 2;
 }

 .tr {
     display: flex;
     width: 100%;
     line-height: 58rpx;
     align-items: center;
     border-bottom: 1px solid #EFF0F5;
 }

 .td {
     color: #999999;
     font-size: 24rpx;
      flex: 4;
      line-height: 58rpx;
      text-align: center;
 }

 .tha {
     flex: 4;
     display: flex;
     line-height: 58rpx;
     padding-left: 30rpx;
 }
.tableTitle {
    color: #999999;
    font-size: 24rpx;
    background-color: #F6F6F6;
    line-height: 80rpx;
}
.tableTitle view {
     flex: 4;
     text-align: center;
}
.tr view {
    min-width: 200rpx;

}
.foodw{
    min-width: 400rpx !important;
    word-break: keep-all;
    word-wrap: break-word;
    white-space: pre-line;
}


.mychartContent {
    height: 800rpx;
    margin-top: 50rpx;
    position: relative;
    margin-bottom: 50rpx;
}
.titleContentBox {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.legendBox {
    display: flex;
    align-items: center;
    padding: 12rpx 30rpx;
    font-size: 24rpx;
}

.legendIcon {
    margin-right: 14rpx;
}

.titleContent {
    position: absolute;
    right: 0;
    bottom: -5%;
    left: 0;
    display: flex;
    justify-content: center;
}
.food-dose-panel{
    padding: 20rpx 40rpx;

}
.food-dose-title{
    opacity: 1;
    font-size: 32rpx;
    font-weight: 600;
    text-align: left;
    color: #121212;
    line-height: 44rpx;
    letter-spacing: 0px;
}
.food-dose-center{
    text-align: center;
}
.food-dose-list{
    margin-top: 30rpx;
    opacity: 1;
    font-size:26rpx;
    font-weight: 400;
    text-align: left;
    color: #999999;
    line-height: 34rpx;
}
.food-dose-top{
    display: flex;
    justify-content: space-between;
}
.food-dose-date{
    color: #121212;
}
.food-dose-bottom{
    display: flex;
    justify-content: space-between;
    color: #FFFFFF;
    margin-top: 30rpx;
    line-height: 50rpx;
}
.legend-center {
    color: #121212;
    font-size: 22rpx;
    margin-top: 40rpx;
}
.legend-center view{
    display: inline-block;
    margin: 0 10rpx;
}
.legend-center .legend-icon {
    display: inline-block;
    width: 25rpx;
    height: 10rpx;
    opacity: 1;
    margin-right: 18rpx;
}
.inputBox {
    /* width: 100%; */
    padding: 30rpx 30rpx 60rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 2rpx solid #F8F8F8;
    font-size: 26rpx;

}

.sendContent {
    width: 100%;
