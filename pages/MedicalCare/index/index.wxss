}
 

.select_box {
    background-color: #fff;
    position: relative;
    right: 0;
    z-index: 1;
    overflow: hidden;
    text-align: left;
    animation: myfirst 0.5s;
    font-size: 30rpx;
    text-align: center;
}

.select_one {
    padding-left: 20rpx;
    width: 100%;
    height: 60rpx;
    position: relative;
    line-height: 60rpx;
}

/* 下拉过度效果 */

@keyframes myfirst {
    from {
        height: 0rpx;
    }

    to {
        height: 210rpx;
    }
}

.triangle-bottom {
    width: 0;
    height: 0;
    border-top: 12rpx solid #A8BACF;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid transparent;
    margin-left: 20rpx;
}
.triangle-top {
    width: 0;
    height: 0;
    border-bottom: 12rpx solid #FEC81E;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid transparent;
    margin-left: 20rpx;
}
