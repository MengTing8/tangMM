.noData {}

.noData .noDataImg {
    width: 50%;
    height: 50%;
}
.refresh{
    font-size: 22rpx;
    color: blue;
}
.pagesHeader {
    background: #FEE55F;
    padding: 0 20rpx 0 50rpx;
    position: relative;
}

.userInfoBox {
    display: flex;
    padding-bottom: 20rpx;
    justify-content: space-between;
}

.pagesHeader .userInfo {
    font-size: 24rpx;
    color: #9B884F;
    line-height: 48rpx;
    display: flex;
    align-items: center;
}

.imageBox {
    margin-right: 20rpx;
}

.userName {
    color: #121212;
    font-size: 38rpx;
    font-weight: 550;
}

.imageUser {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.banner {
    width: 300rpx;
}

.tabContent {
    width: 100%;
    position: absolute;
    bottom: -44%;
    left: 0;
}

.pagesFoot {
    padding-top: 50rpx;
    z-index: 999;
}

.fieldClass {
    padding: 6rpx 0rpx !important;
}

.vanSearchBox {
    padding: 20rpx 0;
    background: #ffffff;
}

.dropdownContent {
    height: 49px;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 2px 14px 0px rgba(190, 190, 190, 0.29);
    border-radius: 6px;
}

.tabsContent {
    padding: 0 40rpx 20rpx 40rpx;
    margin: 30rpx auto;
}

.MessageList {
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 12px 0px rgba(238, 238, 238, 1);
    border-radius: 6px;
    padding: 30rpx 0rpx;
    margin-bottom: 50rpx;
}

.MessageList_top {
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #EFF0F5;
    padding-bottom: 30rpx;
}

.ItemInfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 40rpx;
}

.stateBtnBox {
    margin-right: 40rpx;

}

.stateBtnBox view {
    width: 68px !important;
    height: 18px;
    background: rgba(254, 200, 30, 0.2);
    border-radius: 9px;
    color: #FE9800;
    font-size: 24rpx;
    text-align: center;
}

.infoContent {
    line-height: 50rpx;
    color: #333333;
    font-size: 26rpx;
}

.infoContent_Name {
    color: #121212;
    font-size: 32rpx;
    font-weight: 550;
    margin-right: 20rpx;
}

.infoContent_text {
    color: #979797;
    font-size: 24rpx;
}

.MessageList_bottom {
    padding: 20rpx 40rpx 0 40rpx;

}

.dropdownTitle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 96rpx;
    padding: 0 20rpx;
}

.top-selected {
    padding: 0 10rpx;
    font-size: 28rpx;
}

.titleContent {
    display: flex;
    align-items: center;
}

.itmeName {
    max-width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.select_box {
     background: rgba(255, 255, 255, 1);
     box-shadow: 0px 2px 14px 0px rgba(190, 190, 190, 0.29);
     border-radius: 6px;
    /* background-color: #fff; */
    position: relative;
    right: 0;
    z-index: 1;
    overflow: hidden;
    /* animation: myfirst 0.3s; */
    font-size: 30rpx;
    text-align: center;
}

.select_one {
    padding-left: 20rpx;
    width: 100%;
    height: 60rpx;
    position: relative;
    line-height: 60rpx;
}

@keyframes myfirst {
    from {
        height: 0rpx;
    }

    to {
        height: 210rpx;
    }
}

.triangle-bottom {
    width: 0;
    height: 0;
    border-top: 12rpx solid #A8BACF;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid transparent;
    margin-left: 20rpx;
}

.triangle-top {
    width: 0;
    height: 0;
    border-bottom: 12rpx solid #FEC81E;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid transparent;
    margin-left: 20rpx;
}