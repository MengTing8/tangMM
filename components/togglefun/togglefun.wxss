/* components/togglefun/index.wxss */

.cal-ways {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    padding: 20rpx;
}

.cal-ways view {
    flex: 1;
    text-align: center;
    padding: 18rpx 0;
    position: relative;

}
.ways-active {
    background: #FEC81E;
    color: #fff;
    border-radius: 12rpx;
}

.itemBox_Arrow {
    position: absolute;
    bottom: -19rpx;
    left: 48%;
    margin-left: -18rpx;
    width: 0;
    height: 0;
    border-top: 20rpx solid #FEC81E;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
}